<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:textColorPrimary">@color/colorPrimaryText</item>-->
        <!--<item name="android:textSize">@dimen/NormalTextSize</item>-->
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.DialogButton</item>
    </style>

    <style name="AppTheme.DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!--<item name="android:textSize">@dimen/TextSizeMedium</item>-->
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:background">?attr/selectableItemBackground</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/TextMedium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Link" parent="AppTheme.TextView">
        <!--<item name="android:flag"></item>-->
        <item name="android:layout_margin">@dimen/SpaceTini</item>
    </style>

    <style name="AppTheme.ColoredLink" parent="AppTheme.TextView">
        <!--<item name="android:flag"></item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">@dimen/SpaceTini</item>
        <item name="android:padding">@dimen/SpaceSmall</item>
        <item name="android:background">@drawable/selector_bd_link_rounded</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
