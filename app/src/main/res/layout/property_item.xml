<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/SpaceSmall"
    android:layout_marginEnd="@dimen/SpaceSmall"
    android:layout_marginLeft="@dimen/SpaceSmall"
    android:layout_marginRight="@dimen/SpaceSmall"
    android:layout_marginTop="@dimen/SpaceTini"
    android:layout_marginBottom="@dimen/SpaceTini"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView android:id="@+id/keyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/SpaceSmall"
        android:layout_marginRight="@dimen/SpaceSmall"
        android:textColor="@color/colorTextMiddle"
        tools:text="Key: "/>

    <androidx.appcompat.widget.AppCompatTextView android:id="@+id/valueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextPrimary"
        tools:text="Value"/>

</LinearLayout>
