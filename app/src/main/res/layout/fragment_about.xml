<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.fallgamlet.dnestrcinema.ui.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/SpaceMiddle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/SpaceMiddle"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView android:id="@+id/roomBlueView"
                style="@style/AppTheme.ColoredLink"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_blue"/>

            <TextView android:id="@+id/roomBordoView"
                style="@style/AppTheme.ColoredLink"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_bordo"/>

            <TextView android:id="@+id/roomDvdView"
                style="@style/AppTheme.ColoredLink"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_dvd"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_contact_info" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="@dimen/SpaceMiddle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_autoanswer" />

        <include android:id="@+id/phoneAutoAnswer1"
            layout="@layout/call_phone" />

        <include android:id="@+id/phoneAutoAnswer2"
            layout="@layout/call_phone" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="@dimen/SpaceMiddle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_cashbox_with_worktime" />

        <include android:id="@+id/phoneCashbox"
            layout="@layout/call_phone" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="@dimen/SpaceBig" />

        <LinearLayout android:id="@+id/pointLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/SpaceTini"
            android:gravity="center_vertical">

            <ImageView android:id="@+id/pointView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_place_24dp"/>

            <TextView
                style="@style/AppTheme.Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/org_address"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="@dimen/SpaceBig" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_desc_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_contact_info" />

        <include android:id="@+id/emailDeveloper"
            layout="@layout/send_email" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
